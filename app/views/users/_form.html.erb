<%= form_for(@user, html: {class: "nav-form"}) do |f| %>

  <% if @user.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h4>Atenção!</h4>
      Os seguintes erros foram encontrados:
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <ul class="form">
    <li class="field">
      <label>Nome </label>
      <%= f.text_field :name, placeholder:"Nome", class: "span8" %>
    </li>
    <li class="field">
      <label>Email </label>
      <%= f.text_field :email, placeholder:"Email", class: "span8" %>
    </li>
    <li class="field">
      <label>Time </label>
      <%= f.collection_select(:team_id, @teams, :id, :name) %>
    </li>
    <li class="field">
      <label>Senha </label>
      <%= f.password_field :password, placeholder:"Senha", class: "password_field" %>
    </li>
    <li class="field">
      <label>Confirmação de Senha </label>
      <%= f.password_field :password_confirmation, placeholder:"Confirmação", class: "password_field" %>
    </li>

    <%= f.hidden_field :role, value: "user" %>

    <li class="field">
      <%= f.submit "Salvar", class: "btn btn-primary btn-inverse" %>
    </li>
  </ul>
<% end %>
