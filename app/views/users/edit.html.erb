<ul class="breadcrumb">
  <li><%= link_to @current_user.name, retrospectives_path %> <span class="divider">/</span></li>
  <li><b>Perfil</b></li>
</ul>
<div class="row-fluid">
  <div class="span5">
    <img src="/assets/nelson.png"  title="<%= @current_user.name %>" alt="Ralph Steadman Artwork"/>
  </div><!-- div:span10 -->
  <div class="span6">
    <h3><%= @user.name %></h3>
    <legend></legend>
    <%= form_for(@user, html: {class: "nav-form"}) do |f| %>

      <% if @user.errors.any? %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <h4>Atenção!</h4>
          Os seguintes erros foram encontrados:
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        Nome
        <%= f.text_field :name, placeholder:"Nome", class: "span8" %>
      </div>
      <div class="field">
        Email
        <%= f.text_field :email, placeholder:"E-mail", class: "span8"  %>
      </div>
      <div class="field">
        Projeto
        <%= f.text_field :project, placeholder:"Projeto", class: "span8" %>
      </div>
      <div class="field">
        <h4><%= @current_user.admin ? "Administrador" : "" %></h4>
      </div>
      <div class="actions">
        <%= f.submit "Salvar", class: "btn btn-primary btn-inverse" %>
      </div>
    <% end %>
  </div><!-- div:span3 -->
</div><!-- div:row -->
