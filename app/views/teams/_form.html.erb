<ul class="breadcrumb">
  <li><%= link_to @current_user.name, users_path %> <span class="divider">/</span></li>
  <li><b>Times</b></li>
</ul>
<div class="row-fluid">
  <div class="span6">
    <div class="page-header">
      <h3>Times</h3>
    </div>
    <%= form_for(@team, html: {class: "nav-form"}) do |f| %>

      <% if @team.errors.any? %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <h4>Atenção!</h4>
          Os seguintes erros foram encontrados:
          <ul>
            <% @team.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <ul class="form">
        <li class="field">
          <label>Nome </label>
          <%= f.text_field :name, placeholder:"Nome", class: "span8" %>
        </li>
        <li class="field">
          <label>Líder </label>
          <%= f.collection_select(:user_id, @users, :id, :name) %>
        </li>
        <li class="field">
          <%= f.submit "Salvar", class: "btn btn-primary btn-inverse" %>
        </li>
      </ul>
    <% end %>
  </div><!-- div:span6 -->
  <div class="span5">
    <img src="/assets/milhouse.png"  title="<%= @current_user.name %>" alt="Ralph Steadman Artwork"/>
  </div><!-- div:span6 -->
</div><!-- div:row -->





